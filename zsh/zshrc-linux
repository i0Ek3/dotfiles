tmux_init3()
{
    tmux new-session -s "auto" -d -n "auto"
    tmux split-window -h
    tmux split-window -h
    tmux select-layout even-horizontal
    tmux select-pane -L
    tmux select-pane -L
    tmux -2 attach-session -d
}

alias t3='tmux_init3'

